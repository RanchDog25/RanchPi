modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Sample Project"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Push Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Generate SSH Key"

[[workflows.workflow]]
name = "Run Sample Project"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python sample_project/main.py"

[[workflows.workflow]]
name = "Git Push Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 git_utils.py push \"Updated README with detailed instructions\""

[[workflows.workflow]]
name = "Generate SSH Key"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 setup_github.py"

[deployment]
run = ["sh", "-c", "python sample_project/main.py"]
